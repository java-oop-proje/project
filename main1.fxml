<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.WebView?>

<VBox alignment="CENTER" prefHeight="1447.0" prefWidth="1090.0" spacing="15" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="org.example.demo.controllers.MainController">
    <SplitPane dividerPositions="0.3" prefHeight="1000.0" prefWidth="200.0">
        <items>
            <!-- Sol Panel: Form Alanları -->
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="160.0" prefWidth="100.0">
                <children>
                    <!-- TextField'lar için Stil -->
                    <TextField fx:id="streetAddressField" promptText="Home or Campus Street Address" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextField fx:id="cityField" promptText="City" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="50.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextField fx:id="stateField" promptText="State" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="90.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextField fx:id="zipField" promptText="Zip" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="130.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextField fx:id="phoneNumberField" promptText="Phone Number" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="170.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>

                    <!-- TextArea'lar için Stil -->
                    <TextArea fx:id="educationArea" promptText="Education" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="210.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextArea fx:id="studyAbroadArea" promptText="Study Abroad" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="290.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextArea fx:id="highSchoolArea" promptText="High School" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="370.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextArea fx:id="experienceArea" promptText="Experience" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="450.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextArea fx:id="leadershipActivitiesArea" promptText="Leadership &amp; Activities" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="530.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>
                    <TextArea fx:id="skillsInterestsArea" promptText="Skills &amp; Interests" style="-fx-font-size: 14px; -fx-padding: 8px; -fx-background-color: #f0f0f0; -fx-border-radius: 5px;" AnchorPane.topAnchor="610.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0"/>

                </children>
            </AnchorPane>

            <!-- Sağ Panel: WebView -->
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="239.0" prefWidth="762.0">
                <children>
                    <WebView fx:id="pdfWebView" prefHeight="1000.0" prefWidth="1000.0" style="-fx-border-radius: 5px;" AnchorPane.topAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.bottomAnchor="10.0"/>
                </children>
            </AnchorPane>
        </items>
    </SplitPane>

    <!-- Submit Butonu -->
    <Button onAction="#handleSubmitButtonAction" text="Submit" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />

    <!-- Çıkış Yap Butonu -->
    <Button onAction="#logout" text="Çıkış Yap" style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 10px 20px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
</VBox>
