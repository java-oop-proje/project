            </children>
        </VBox>

        <!-- WebView Panel -->
        <AnchorPane layoutX="420.0" layoutY="78.0" prefHeight="500.0" prefWidth="330.0">
            <children>
                <WebView fx:id="pdfWebView" prefHeight="500.0" prefWidth="330.0" style="-fx-border-radius: 5px; -fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7;" />
            </children>
        </AnchorPane>

        <!-- Kaydet Butonu -->
        <Button layoutX="408.0" layoutY="560.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="103.0" text="Kaydet" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 8px 16px; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
    </children>
</AnchorPane>
