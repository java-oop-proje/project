<?import javafx.scene.web.WebView?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.6" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.cvapp.HelloController">
    <children>
        <!-- Başlık -->
        <Label alignment="CENTER" layoutX="122.0" layoutY="22.0" prefHeight="40.0" prefWidth="427.0" text="KİŞİSEL CV UYGULAMASI">
