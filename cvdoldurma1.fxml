                <Font size="32.0" />
            </font>
            <style>-fx-font-weight: bold; -fx-text-fill: #2c3e50;</style>
        </Label>

        <!-- Açıklama TextArea -->
        <TextArea layoutX="154.0" layoutY="78.0" prefHeight="45.0" prefWidth="359.0" text="Profesyonel CV'nizi bu formu doldurarak oluşturabilirsiniz" style="-fx-font-size: 14px; -fx-background-color: #ecf0f1; -fx-border-radius: 5px; -fx-border-color: #bdc3c7;" />

        <!-- Form Alanları -->
        <VBox layoutX="94.0" layoutY="119.0" prefHeight="420.0" prefWidth="300.0" spacing="15">
            <children>
                <Label prefHeight="21.0" prefWidth="136.0" text="İsim" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <TextField style="-fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #ecf0f1; -fx-border-radius: 5px; -fx-border-color: #bdc3c7;" />

                <Label prefHeight="21.0" prefWidth="129.0" text="Soyisim" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <TextField style="-fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #ecf0f1; -fx-border-radius: 5px; -fx-border-color: #bdc3c7;" />

                <Label prefHeight="21.0" prefWidth="190.0" text="İletişim" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
