                <Label prefHeight="21.0" prefWidth="190.0" text="Eğitim" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                <TextArea style="-fx-font-size: 14px; -fx-padding: 10px; -fx-background-color: #ecf0f1; -fx-border-radius: 5px; -fx-border-color: #bdc3c7;" prefHeight="70.0" prefWidth="180.0" />

                <Label prefHeight="21.0" prefWidth="190.0" text="Yetenekler" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
