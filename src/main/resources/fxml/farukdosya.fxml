<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.demo.controllers.FarukDosyaController"
      spacing="15"
      style="-fx-background-color: white;"
      prefWidth="600"
      prefHeight="400">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Kullanıcı Bilgileri" 
           style="-fx-font-size: 24px; -fx-font-weight: bold;"/>
           
    <ListView fx:id="listView" 
              VBox.vgrow="ALWAYS"
              style="-fx-background-radius: 5;"/>
              
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="cvOlusturButton" 
                onAction="#cvOlustur" 
                text="CV Oluştur"
                prefWidth="200"
                prefHeight="40"
                style="-fx-background-color: #2196f3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"/>
                
        <Button fx:id="cvGorButton"
                onAction="#cvGor"
                text="CV Gör" 
                prefWidth="200"
                prefHeight="40"
                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;"/>
    </HBox>

</VBox>
